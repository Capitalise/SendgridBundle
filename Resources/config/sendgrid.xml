<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="savch_sendgrid.adapter"></parameter>
        <parameter key="savch_sendgrid.api_user"></parameter>
        <parameter key="savch_sendgrid.api_key"></parameter>
    </parameters>
    <services>
        <service id="savch_sendgrid.webapi.adapter" class="%savch_sendgrid.adapter%" />

        <service id="savch_sendgrid.webapi" class="Savch\SendgridBundle\Api\WebApi">
            <argument type="service" id="savch_sendgrid.webapi.adapter" />
            <argument>%savch_sendgrid.api_user%</argument>
            <argument>%savch_sendgrid.api_key%</argument>
        </service>
    </services>

</container>